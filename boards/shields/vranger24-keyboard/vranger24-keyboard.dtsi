#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,display = &oled;
        zmk,matrix-transform = &default_transform;
    };

    /*
     * 29-key layout: num(4) + top(6) + home(6) + bottom(6) + thumb(7).
     * Maps logical keymap positions to physical (row,col). Unused 5×7 positions are skipped.
     */
    default_transform: default_transform {
        compatible = "zmk,matrix-transform";
        rows = <1>;
        columns = <29>;
        map = <
            /* num: 4 */
            RC(0,2) RC(0,3) RC(0,4) RC(0,5)
            /* top: 6 */
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)
            /* home: 6 */
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)
            /* bottom: 6 */
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)
            /* thumb: 7 */
            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5) RC(4,6)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        /* ROWS: num, top, home, bottom, thumb */
        row-gpios = <
            &gpio0 18 (GPIO_ACTIVE_LOW)
            &gpio0 15 (GPIO_ACTIVE_LOW)
            &gpio0 14 (GPIO_ACTIVE_LOW)
            &gpio0 16 (GPIO_ACTIVE_LOW)
            &gpio0 10 (GPIO_ACTIVE_LOW)
        >;

        /* COLUMNS: outer → thumbspace */
        col-gpios = <
            &gpio0 2  (GPIO_ACTIVE_LOW)
            &gpio0 3  (GPIO_ACTIVE_LOW)
            &gpio0 7  (GPIO_ACTIVE_LOW)
            &gpio0 6  (GPIO_ACTIVE_LOW)
            &gpio0 5  (GPIO_ACTIVE_LOW)
            &gpio0 4  (GPIO_ACTIVE_LOW)
            &gpio0 8  (GPIO_ACTIVE_LOW)
        >;

        diode-direction = "col2row";
    };

    oled: oled {
        compatible = "ssd1306";
        width = <128>;
        height = <64>;
    };
};

&i2c0 {
    status = "okay";
    sda-pin = <0>;
    scl-pin = <1>;
};
